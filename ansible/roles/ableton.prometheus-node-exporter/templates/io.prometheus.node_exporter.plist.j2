<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>MachServices</key>
  <dict>
    <key>{{ node_exporter_ident }}</key>
    <true/>
  </dict>
  <key>KeepAlive</key>
  <true/>
  <key>Label</key>
  <string>{{ node_exporter_ident }}</string>
  <key>UserName</key>
  <string>{{ ansible_user }}</string>
  <key>EnvironmentVariables</key>
  <dict>
    <key>PATH</key>
    <string>/usr/local/sbin:/usr/local/bin:/sbin:/usr/sbin:/bin:/usr/bin</string>
  </dict>
  <key>StandardErrorPath</key>
  <string>/tmp/{{ node_exporter_ident }}.stderr</string>
  <key>StandardOutPath</key>
  <string>/tmp/{{ node_exporter_ident }}.stdout</string>
  <key>ProgramArguments</key>
  <array>
    <string>{{ node_exporter_exe }}</string>
    {{ node_exporter_args_mac }}
    <string>--web.listen-address=:{{ node_exporter_port }}</string>
  </array>
  <key>RunAtLoad</key>
  <true/>
</dict>
</plist>
